slave:
    build: /drone/c-modbus-slave/.
    dockerfile: /drone/c-modbus-slave/Dockerfile

modbusd:
    build: .
    #dockerfile: Dockerfile.alpine
    volumes:
        - /tmp:/tmp
    links:
        - slave

dummy-psmb:
    build: /drone/dummy-psmb/.
    dockerfile: /drone/dummy-psmb/Dockerfile
    volumes_from:
        - modbusd
    links:
        - slave
    