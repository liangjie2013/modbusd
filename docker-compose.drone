slave:
    build: /drone/test/c-modbus-slave/.
    dockerfile: /drone/test/c-modbus-slave/Dockerfile

modbusd:
    image: takawang/modbusd:alpine
    volumes:
        - /tmp:/tmp
    links:
        - slave

dummy-psmb:
    build: /drone/test/dummy-psmb/.
    dockerfile: /drone/test/dummy-psmb/Dockerfile
    volumes_from:
        - modbusd
    links:
        - slave
    