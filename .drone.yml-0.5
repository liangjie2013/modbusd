# taka's private drone server
# for v0.5

workspace:
    path: /drone # overwrite default path

pipeline:
    publish:
        image: takawang/dind:edge
        volumes:
            - /var/run/docker.sock:/var/run/docker.sock # docker in docker trick
        commands:
            - docker build --no-cache=true --build-arg MB=`(cat /etc/mb)` -t edgepro/modbusd:x86 -f Dockerfile.alpine .
            - docker push edgepro/modbusd:x86
    ci:
        image: takawang/dind:push # docker in docker with compose
        volumes:
            - /var/run/docker.sock:/var/run/docker.sock # docker in docker trick
        commands:
            - docker-compose -f docker-compose.drone-x86 rm -f -a
            - docker-compose -f docker-compose.drone-x86 build
            - docker-compose -f docker-compose.drone-x86 up --abort-on-container-exit
            - docker-compose -f docker-compose.drone-x86 rm -f -a